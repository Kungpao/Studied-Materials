// first program. 
//it is defines plural of nouns according to russian grammar in reply to number input by user.

#include<iostream>

using namespace std;

void main()

{

	setlocale(LC_ALL, "RUS");
	int a;
	cout << "введите количество\n";
	cin >> a;
	if (a % 10 >= 5 || a % 100 >= 5 || a % 100 <= 20)
	{
		cout << a << "грибов\n";

	}
	else
	{
		if (a % 10 == 1)
		{
			cout << a << "гриб\n";
		}
		else
		{
			cout << a << "гриба\n";
		}
	}

}
 
