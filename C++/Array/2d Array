#include "stdafx.h"

int _tmain(int argc, _TCHAR* argv[])
{

	// Declaring 2d array #1
	int a[3][4] = { 0 }; 

	// Declaring 2d array #2
	int b[][2] = { { 1, 2 },{ 3, 4 } };

	// Declaring 2d array #3
	int c[2][2] = { 1,2,3,4 }; 

	// raws
	for (int i = 0; i < 3; i++) 
	{
		// cols
		for (int j = 0; j < 4; j++) 
			printf("%d ", a[i][j]);
		printf("\n");
	}
	printf("\n");

	// exotic way of accessing elemets
	for (int i = 0; i < 2; i++)
	{
		for (int j = 0; j < 2; j++)
			printf("%d ", *(b[i] + j));
		printf("\n");
	}
	printf("\n");

	// one more exotic way of accessing elemets
	for (int i = 0; i < 2; i++)
	{
		for (int j = 0; j < 2; j++)
			printf("%d ", *(*(c + 1) + j)); 
		printf("\n");
	}
	printf("\n");

	return 0;
}

